//CODE TO CHECK WHETHER DATABASE IS SUCCESSFULLY CONNECTED TO JAVA EDITOR OR NOT

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;

public class Main {
    public static void main(String[] args) {
        // Database URL and credentials
        String url = "jdbc:mysql://localhost:3306/Students"; // replace your_database with your DB name
        String user = "root"; // replace with your DB username
        String password = "10122001Am#"; // replace with your DB password

        Connection connection = null;

        try {
            // Load and register MySQL driver (optional for newer versions)
            Class.forName("com.mysql.cj.jdbc.Driver");

            // Attempt to connect to the database
            connection = DriverManager.getConnection(url, user, password);
            System.out.println("Connection successful!");
            System.out.println(connection);

        } catch (ClassNotFoundException e) {
            System.out.println("MySQL JDBC Driver not found. Include it in your library path.");
            e.printStackTrace();
        } catch (SQLException e) {
            System.out.println("Failed to connect to the database.");
            e.printStackTrace();
        } finally {
            // Close connection to avoid resource leaks
            if (connection != null) {
                try {
                    connection.close();
                } catch (SQLException e) {
                    e.printStackTrace();
                }
            }
        }
    }
}
